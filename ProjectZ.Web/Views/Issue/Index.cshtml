@model ProjectZ.Web.ViewModels.IssueViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbo">
    <img src="/Content/images/dexter.jpg" class="header-image">
</div>

<div class="wrapper">
    <nav class="nav">
        <ul>
            <li><a href="@Url.Action("Details","Project")">Overview</a></li>
            <li><a href="@Url.Action("Index","Release")">Releases</a></li>
            <li><a href="#">Polls</a></li>
            <li class="active"><a href="@Url.Action("Index", "Issue")">Issues</a></li>
        </ul>
    </nav>
    <div class="inner">
        <div class="content">
            <h1>Issues</h1>

            <ul class="unstyled">
                @foreach (var issue in Model.Issues)
                {
                    <li>
                        <div class="issues">
                            <div class="votes">
                                <h3 class="count">
                                    @(issue.Votes == null ? 0 : issue.Votes.Count)
                                </h3>
                                <p class="vote">
                                    <i class="fa fa-thumbs-o-up"></i>
                                </p>

                            </div>
                            <div class="issue">
                                <h3 class="title">@Html.ActionLink(issue.Title, "Details", new { id = issue.Id })</h3>
                                <p class="description">@issue.Description</p>
                            </div>
                        </div>
                    </li>
                }
            </ul>

            <!-- please do not remove this line -->

            <div style="display: none;">
                <a href="http://slipsum.com">lorem ipsum</a>
            </div>

            <!-- end slipsum code -->

        </div>
        <div class="sidebar">
            <h1>New issue</h1>
            <div class="box">
                <input type="text" placeholder="Name" />
            </div>
        </div>
    </div>
</div>