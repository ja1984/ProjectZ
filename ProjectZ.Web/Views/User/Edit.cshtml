@model ProjectZ.Web.Models.ViewModels.UserViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>
    <img src="@Model.User.GetImage(104)" alt="@Model.User.UserName" title="@Model.User.UserName" class="user-image"/>
    @Model.User.UserName</h2>

<form method="post" action="/User/Edit">

    <div class="form-row-group">
        <div class="form-row half">
            <div class="inner">
                @Html.TextBoxFor(x => x.User.FirstName, new { @class = "fill", placeholder = "First name" })
            </div>
        </div>
        <div class="form-row half">
            <div class="inner">
                @Html.TextBoxFor(x => x.User.LastName, new { @class = "fill", placeholder = "Last name" })
            </div>
        </div>
    </div>
    <div class="form-row-group">
        <div class="form-row half">
            <div class="inner">
                @Html.TextBoxFor(x => x.User.Email, new { @class = "fill", placeholder = "Email" })
            </div>
        </div>
        <div class="form-row half">
            <div class="inner">
                @Html.TextBoxFor(x => x.User.GravatarEmail, new { @class = "fill", placeholder = "Gravatar" })
            </div>
        </div>
    </div>
    <div class="form-row-group">
        <div class="form-row half">
            <div class="inner">
                @Html.TextAreaFor(x => x.User.Description, new { @class = "fill", placeholder = "Description", rows = "7" })
            </div>
        </div>
        <div>
            <div class="form-row half">
                <div class="inner">
                    @Html.TextBoxFor(x => x.User.GitHub, new { @class = "fill", placeholder = "Github username" })
                </div>
            </div>
            <div class="form-row half">
                <div class="inner">
                    <label class="fill" style="font-weight: normal; margin: 0; cursor: pointer;">
                        @Html.CheckBoxFor(x => x.User.DisplayEmail)
                        Show my email
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <input type="submit" class="button button-success button-large" style="margin-right: 8px;" value="Save changes" />

    </div>
</form>
